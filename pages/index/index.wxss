/**index.wxss**/
.swiper {
  height: 500rpx;
  width: 100%;
}
.swiper-image {
  height: 90%;
  width: 100%;
}
.slide-image{
   height: 100%;
  width: 100%;
}
.weatherwrap{
  height: 100%;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  padding:10rpx 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  color:  #666;
  font-size:15px;
  background-color:#f5f5f5;
  opacity: 0.85;
}
/*当天天气信息*/
.info{
  margin-top:10rpx;
  width:100%;
  height:220px;
}

/*城市名称*/
.city{
  margin: 20rpx;
  border-bottom:1px solid #2a579a;
}

/*当天温度*/
.temp{
  font-size: 100rpx;
  line-height: 130rpx;
  text-align: center;
  padding-top:20rpx;
  color:#2a579a;
}

/*感冒描述*/
.weather{
  line-height: 22px;
  margin: 20rpx;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  font-size: 20px;
}
.life{
  line-height: 22px;
  margin-top: 5px;
  padding: 0 5px;
}
.content{
  margin-top: 10px;
  height:80px;
}
.author{
  text-align: right;
}

.wrapper{
  background-image:url('http://i1.bvimg.com/686943/6a648c7e7d2c1b79.png');
  background-size:100% 100%;
}
